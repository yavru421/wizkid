            <!-- Feature Buttons -->
            <StackPanel Grid.Row="1" Margin="10,20,10,10">
                <TextBlock Text="Features" FontWeight="Bold" Margin="0,0,0,10"/>
                <Button Name="TakeScreenshotBtn" Content="ðŸ“· Take Screenshot" Style="{StaticResource SidebarButtonStyle}"/>
                <Button Name="AnalyzeClipboardBtn" Content="ðŸ“‹ Analyze Clipboard" Style="{StaticResource SidebarButtonStyle}"/>
                <Button Name="ReviewCodeBtn" Content="ðŸ§‘â€ðŸ’» Review Code" Style="{StaticResource SidebarButtonStyle}"/>
                <Button Name="SummarizeTextBtn" Content="ðŸ“ Summarize Text" Style="{StaticResource SidebarButtonStyle}"/>
                <Button Name="ExplainErrorBtn" Content="â“ Explain Error" Style="{StaticResource SidebarButtonStyle}"/>
                <Button Name="OrganizeFilesBtn" Content="ðŸ—‚ï¸ Organize Files" Style="{StaticResource SidebarButtonStyle}"/>
